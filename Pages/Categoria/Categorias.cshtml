@page "/categorias"
@model task_slayer.Pages.Categoria.Categorias
@{
    ViewData["Title"] = "Categorias - Task Slayer";
}

@section Styles {
    <link href="~/css/categorias.css" rel="stylesheet" />
}

<div class="categorias-container">
    <h2>Categorias de Tarefas</h2>

    <div class="categorias-header">
        <input type="text" placeholder="Buscar categoria..." class="search-box" />
        <a asp-page="./CreateCategoria" class="btn-new-category" style="text-decoration: none;">+ Nova Categoria</a>
    </div>

    <div class="categorias-list">
        @foreach (var categoria in Model.ListCategorias)
        {
            <div class="categoria-card">
                <div class="categoria-info">
                    <span class="categoria-nome">@categoria.Nome</span>
                </div>
                <div class="categoria-actions">
                    <a asp-page="./UpdateCategoria" asp-route-id="@categoria.Id" style="text-decoration: none;" class="btn-edit">✏️</a>
                    <!-- 🔹 Formulário para deletar a categoria -->
                    <form method="post" asp-page-handler="Delete" asp-route-id="@categoria.Id" style="display:inline;">
                        <button type="submit" class="btn-delete" onclick="return confirm('Tem certeza que deseja excluir esta categoria?')">🗑️</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>